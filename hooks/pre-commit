#!/bin/bash
#
# Pre-commit hook for tada
# This hook runs formatting checks, linting, and tests before allowing a commit
#
# To skip this hook, use: git commit --no-verify

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}ðŸ” Running pre-commit checks...${NC}"
echo ""

# Check if we're in a Go project
if [ ! -f "go.mod" ]; then
    echo -e "${RED}âœ— go.mod not found. Are you in the project root?${NC}"
    exit 1
fi

# 1. Check formatting
echo -e "${BLUE}ðŸ“ Checking code formatting...${NC}"
UNFORMATTED=$(gofmt -l . 2>&1 | grep -v "^vendor/" || true)
if [ -n "$UNFORMATTED" ]; then
    echo -e "${RED}âœ— Code formatting issues found in:${NC}"
    echo "$UNFORMATTED"
    echo ""
    echo -e "${YELLOW}Run 'gofmt -w .' to fix formatting${NC}"
    exit 1
fi

# Check goimports if available
if command -v goimports &> /dev/null; then
    UNFORMATTED_IMPORTS=$(goimports -l . 2>&1 | grep -v "^vendor/" || true)
    if [ -n "$UNFORMATTED_IMPORTS" ]; then
        echo -e "${RED}âœ— Import formatting issues found in:${NC}"
        echo "$UNFORMATTED_IMPORTS"
        echo ""
        echo -e "${YELLOW}Run 'goimports -w .' to fix imports${NC}"
        exit 1
    fi
fi

echo -e "${GREEN}âœ“ Code formatting looks good${NC}"
echo ""

# 2. Run linting
echo -e "${BLUE}ðŸ”Ž Running linter...${NC}"
if command -v golangci-lint &> /dev/null; then
    if golangci-lint run --timeout=2m ./...; then
        echo -e "${GREEN}âœ“ Linting passed${NC}"
    else
        echo -e "${RED}âœ— Linting failed${NC}"
        echo -e "${YELLOW}Fix the linting issues above or use 'git commit --no-verify' to skip${NC}"
        exit 1
    fi
else
    echo -e "${YELLOW}âš  golangci-lint not found, running go vet instead${NC}"
    if go vet ./...; then
        echo -e "${GREEN}âœ“ go vet passed${NC}"
    else
        echo -e "${RED}âœ— go vet failed${NC}"
        exit 1
    fi
fi
echo ""

# 3. Run tests
echo -e "${BLUE}ðŸ§ª Running tests...${NC}"
if go test -short ./...; then
    echo -e "${GREEN}âœ“ All tests passed${NC}"
else
    echo -e "${RED}âœ— Tests failed${NC}"
    echo -e "${YELLOW}Fix the failing tests or use 'git commit --no-verify' to skip${NC}"
    exit 1
fi
echo ""

echo -e "${GREEN}âœ… All pre-commit checks passed!${NC}"
echo ""
exit 0
